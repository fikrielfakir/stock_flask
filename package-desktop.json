{
  "name": "stockceramique-desktop",
  "productName": "StockCéramique",
  "version": "1.0.0",
  "description": "Système de gestion d'inventaire pour pièces de rechange céramiques - Version Desktop",
  "author": "StockCéramique Team",

  "license": "MIT",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build:desktop": "npm run build:frontend && npm run build:server && npm run build:electron",
    "build:frontend": "vite build",
    "build:server": "esbuild server/index-desktop.ts --platform=node --packages=external --bundle --format=esm --outdir=dist-desktop",
    "build:electron": "electron-builder",
    "dist": "npm run build:desktop",
    "pack": "electron-builder --dir",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.stockceramique.desktop",
    "productName": "StockCéramique",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist-desktop",
        "to": "server",
        "filter": ["**/*"]
      },
      {
        "from": "data",
        "to": "data",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "client/public/favicon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "client/public/favicon.ico",
      "uninstallerIcon": "client/public/favicon.ico"
    },
    "mac": {
      "category": "public.app-category.business",
      "icon": "client/public/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  }
}